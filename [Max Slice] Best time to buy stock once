class Solution {
    public int solution(int[] A) {
        int lowestPrice = Integer.MAX_VALUE;
        int maxProfit = 0;
        for(int i = 0; i < A.length; i++){
            if(A[i] < lowestPrice){
                lowestPrice = A[i];
            }
            //buy at the lowest price, so it is okay to have it "behind"
            maxProfit = Math.max(maxProfit, A[i] - lowestPrice);
        }
        return maxProfit;
    }
}
