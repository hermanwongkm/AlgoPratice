import java.util.*;

class Solution {
    public int solution(int[] A) {
        int maxSoFar = 0;
        int sum = 0;
        int maxSlice = Integer.MIN_VALUE;
        
        for(int i = 0; i < A.length; i++){
            maxSoFar = Math.max(A[i], maxSoFar + A[i]);
            maxSlice = Math.max(maxSlice,maxSoFar);
        }
        return maxSlice;
    }
}
